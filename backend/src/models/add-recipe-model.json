{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "create-recipe",
    "type": "object",
    "properties": {
      "title": {
        "type": "string",
        "minLength": 1  
      },
      "category": {
        "type": "string"
      },
      "description": {      
        "type": "string",
        "minLength": 1     
      }  
    },
    "required": ["title",  "description"],

    "additionalProperties": {
      "properties":{
          "recipeUrl":{
              "type":"string"
          },
          "likes": {
            "type":"number"
          }
      }
  }
 
  }

  